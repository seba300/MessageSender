<Window x:Class="MessageSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Msg" HorizontalAlignment="Left" Height="80" Margin="85,125,0,0" TextWrapping="Wrap" Text="msg" VerticalAlignment="Top" Width="330" MaxLength="160"/>
        <Button x:Name="SendMsg" Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="85,225,0,0" Click="SendMsg_Click"/>
        <ComboBox x:Name="cv" HorizontalAlignment="Left" Margin="85,68,0,0" VerticalAlignment="Top" Width="235" IsEditable="True" 
                  ItemsSource="{Binding Path=PeopleList}"
                  DisplayMemberPath="Name"
                  />




    </Grid>
</Window>
